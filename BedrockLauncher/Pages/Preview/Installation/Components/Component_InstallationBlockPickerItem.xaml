<ListViewItem x:Class="BedrockLauncher.Pages.Preview.Installation.Components.Component_InstallationBlockPickerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="65" Width="60" 
             Style="{StaticResource PanelListViewItem}"
             GotFocus="MainButton_GotFocus"
             LostFocus="MainButton_LostFocus"
             MouseEnter="MainButton_MouseEnter"
             MouseLeave="MainButton_MouseLeave"
             PreviewMouseLeftButtonUp="ListViewItem_PreviewMouseEvent"
             PreviewMouseLeftButtonDown="ListViewItem_PreviewMouseEvent">
    <Grid>
        <ContentPresenter x:Name="Host" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></ContentPresenter>
        <Button Style="{DynamicResource CloseButton}" 
            Name="CrossButton" 
            Visibility="Collapsed"
            Width="15" 
            Height="15" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Right"
            Margin="0,-8,-8,0"
            MouseEnter="CrossButton_MouseEnter"
            MouseLeave="CrossButton_MouseLeave"></Button>
    </Grid>
</ListViewItem>
